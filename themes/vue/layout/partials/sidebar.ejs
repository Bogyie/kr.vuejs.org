<% var isHomePage = page.path === 'index.html' %>

<div class="sidebar">
  <div class="sidebar-inner">
    <% if (isHomePage) { %>
      <ul class="main-menu">
        <%- partial('partials/main_menu', { context: 'sidebar' }) %>
      </ul>
    <% } %>
    <div class="list">
      <% if (type !== 'search') { %>
        <h2>
          <% titles = {
            api: 'API',
            examples: '예시',
            guide: '가이드',
            cookbook: '쿡북<sup class="beta">beta</sup>',
            'style-guide': '스타일 가이드<sup class="beta">beta</sup>'
          } %>
          <%- titles[type] %>
          <% if (['cookbook', 'style-guide'].indexOf(type) === -1) { %>
            <select class="version-select">
              <option value="">3.x</option>
              <option value="SELF" selected>2.x</option>
              <option value="v1">1.0</option>
              <option value="012">0.12</option>
              <option value="011">0.11</option>
            </select>
          <% } %>
        </h2>
        <%- partial('partials/toc', { type: type }) %>
      <% } %>
    </div>
  </div>
</div>
<% if (!page.sponsors && !page.partners) { %>
<%- partial('partials/platinum_sponsors', { context: 'right' }) %>
<% } %>
